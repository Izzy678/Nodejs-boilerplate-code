{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2019",

    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    /* Type Checking */
    "strict": true,
    // "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
